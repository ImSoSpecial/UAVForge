<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainWindow"
    android:background="#434A54"
    android:padding="15dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            style="@style/UAVButton"
            android:id="@+id/MPlanning_button"
            android:text="Mission Planning"
            android:layout_alignParentTop="true"
            android:onClick="missionPlanningClicked"
            />

        <Button
            style="@style/UAVButton"
            android:id="@+id/MExecution_button"
            android:text="Mission Execution"
            android:layout_below="@+id/MPlanning_button"
            android:layout_marginTop="20dp"
            android:onClick="missionExecutionClicked"
            />

        <Button
            style="@style/UAVButton"
            android:id="@+id/MRecap_button"
            android:text="Mission Recap"
            android:layout_below="@+id/MExecution_button"
            android:layout_marginTop="20dp"
            android:onClick="missionRecapClicked"
            />

        <Button
            style="@style/UAVButton"
            android:id="@+id/Tutorial_button"
            android:text="Tutorial"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/MRecap_button"
            android:onClick="missionTutorialClicked"
            />

        <Button
            style="@style/UAVButton"
            android:id="@+id/dummy_button"
            android:text="dummy"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Tutorial_button"
            android:onClick="dummyClicked"
            />

    </RelativeLayout>

</RelativeLayout>
