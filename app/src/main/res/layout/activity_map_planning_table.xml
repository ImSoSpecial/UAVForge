<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context="uavforge.uavforge.MapPlanningTable">

    <RelativeLayout
        android:id="@+id/MPButtonOptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MPAddButton"
        android:text="+"
        android:onClick="plusButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MPRemoveButton"
        android:layout_toRightOf="@+id/MPAddButton"
        android:text="-"
        android:onClick="removeButtonClicked" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/MPscrollView"
        android:layout_below="@+id/MPButtonOptions">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/MPtableView">
                </TableLayout>

        </ScrollView>

</RelativeLayout>
